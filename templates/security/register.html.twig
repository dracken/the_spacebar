{% extends 'content_base.html.twig' %}



{% form_theme registrationForm _self %}



{% block form_row %}
    {#{  dump() }#}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}
        {{- form_label(form, null, {
            label_attr: { class: 'sr-only'}
        }) -}}
        {{- form_errors(form) -}}
        {{- form_widget(form, widget_attr) -}}
        {{- form_help(form) -}}
{% endblock %}



{% block _user_registration_form_agreeTerms_row %}
    <div class="checkbox mb-3">
        {{ form_errors(form) }}
        <label>
            <input type="checkbox" name="{{ full_name }}" required> Agree to <a href="#">terms</a> I for sure read
        </label>
    </div>
{% endblock %}

{%  block _user_registration_form_email %}
    {{ form_errors(form, {
        error_message: "That email is already registered.  Did you <a href='/forgot'>forget</a> your password?"
    }) }}
{% endblock %}

{% block title %}Register!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}



{% block content_body %}
    {% if error is defined and error is not null %}
        <span class="bg-danger">
            {{ dump(error) }}
        </span>
    {%  endif %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            {{ form_start(registrationForm, {
                'attr': {'class': 'form-signin'}

            }) }}
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            {{ form_row(registrationForm.email, {
                attr: { placeholder: 'Email' }
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                attr: { placeholder: 'Password' }
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            {#{ form_label(registrationForm.email, 'Email') }#}
            {#{ form_errors(registrationForm.email) | raw }#}
            {#{ form_widget(registrationForm.email) }}
            {{ form_help(registrationForm.email) }#}

                <button class="'btn btn-lg btn-primary btn-block" type="submit">
                    Register
                </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>

